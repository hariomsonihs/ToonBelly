<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ShowBox" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here -->
    </style>
    <style name="CartoonButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/cartoon_text_dark</item>
        <item name="strokeColor">@color/cartoon_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Theme.ShowBox" parent="Base.Theme.ShowBox" />
    <!-- SearchView Theme -->
    <style name="SearchViewTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Bottom Navigation Text -->
    <style name="BottomNavigationText">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomNavigationActiveText" parent="BottomNavigationText">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="CartoonSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/cartoon_text_dark</item>
        <item name="android:textColorHint">@color/cartoon_text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@drawable/ic_cartoon_search_background</item>

    </style>
    <style name="CartoonDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="CartoonNavTextActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:textColor">@color/cartoon_primary</item>
    </style>

    <style name="CartoonNavTextInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>

        <item name="android:textColor">@color/cartoon_text_light</item>
    </style>
</resources>